 <div id="container">
 	{{#if successMsg}}
 	<div class="col-sm-12 alert alert-danger">
		{{successMsg}}
	</div>
	{{/if}}
	<section style="padding-top: 62px;">
		<div class="ht-button">
			<h4>TẠO NÊN CHIẾC ÁO CHỈ DÀNH CHO RIÊNG BẠN</h4>
			<p>Giảm 20% với đơn hàng trên 30 áo</p>
			<button class="btn ht-design-now button12">Thiết kế ngay</button>
		</div>
		<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
		  <ol class="carousel-indicators">
		    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
		    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
		  </ol>
		  <div class="carousel-inner">
		    <div class="carousel-item active">
		      <img id ="ht-carousel-img1" class="d-block w-100" src="img/carousel.jpg" alt="First slide">
		    </div>
		    <div class="carousel-item">
		      <img id ="ht-carousel-img2" class="d-block w-100" src="img/carousel2.jpg" alt="Second slide">
		    </div>
		  </div>
		  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
		  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		    <span class="carousel-control-next-icon" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
		</div>
	</section>
	<section>
		<div class="container-fluid" style="margin-bottom: 20px; width: 90%;">
			<div class="row ht-steps">
				<hr class="blue-line ht-first-blue" >
				<p class="ht-step-label" >4 Bước đơn giản</p>
				<hr class="blue-line ht-second-blue">
				<div class="ht-step col-md-3 col-sm-12 hvr-grow">
					<img src="img/step1.png" alt="">
					<span>Chọn mẫu áo</span>
				</div>
				<div class="ht-step col-md-3 col-sm-12 hvr-grow">
					<img src="img/step2.png" alt="">
					<span>Tự do thiết kế</span>
				</div>
				<div class="ht-step col-md-3 col-sm-12 hvr-grow">
					<img src="img/step3.png" alt="">
					<span>Thanh toán</span>
				</div>
				<div class="ht-step col-md-3 col-sm-12 hvr-grow">
					<img src="img/step4.png" alt="">
					<span>Nhận áo</span>
				</div>
			</div>
		</div>
	</section>

	<div class="container-fluid" style="margin-top: 35px; padding: 0 60px;">
		<div class="row">
			<aside class="ht-aside col-sm-3">
				<form class="form-inline my-2 my-lg-0 ">
			      <input id="ht-search" class="form-control ht-search-bar" type="search" placeholder="Tìm kiếm sản phẩm" aria-label="Search" style="border-color: #ff6600">
			    </form>
				<ul class="ht-category">
					<li class="ht-head-category">DANH MỤC SẢN PHẨM</li>
					<a href="./shopping"><li class="ht-category-item hvr-sweep-to-right">Áo cổ trụ</li></a>
					<a href="./shopping"><li class="ht-category-item hvr-sweep-to-right">Áo cổ tròn</li></a>
				</ul>
				<h3 style="color: #0033ff; text-shadow: 2px 4px #e1e1e1; text-align: center;">
					Tư vấn - <span style="color: #ff6600;">đặt áo</span>
				</h3>
				<div class="ht-contact">
					<div class="ht-contact-item hvr-buzz-out">
						<img src="img/phone.png" style="padding-right: 10px;" alt="phone">
						<span>016777 - Miễn phí</span>
					</div>
					<div class="ht-contact-item hvr-grow">
						<img src="img/chat.png" style="padding-right: 10px;" alt="chat">
						<span>Chat với chúng tôi</span>
					</div>
					<div class="ht-contact-item hvr-grow">
						<img src="img/mail.png" style="padding-right: 10px;" alt="mail">
						<span style="word-wrap: break-word">tuvan@freestyle.vn</span>
					</div>
					<div class="ht-contact-item">
					</div>
				</div>
			</aside>
			<section class="col-sm-9 container" >
				<div class="row" style="margin-left: 10px; margin-right: 10px; padding-bottom: 10px; border-bottom: solid 0.5px darkgray;">
					<div class="col-sm-1"></div>
					<div class="col-sm-4 ht-title" style="padding-left: 0;">
						Sản phẩm tiêu biểu
					</div>
					<div class="col-sm-2"></div>
					<div class="col-sm-5">
						<div class="dropdown show" style="width: 100%; ">
						  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 100%; padding: 0; border: solid 1px #ff6600;"> Sắp xếp theo </a>
						  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="width: 100%; text-align: center;">
						    <a class="dropdown-item" href="#">Mới nhất</a>
						    <a class="dropdown-item" href="#">Giá từ thấp đến cao</a>
						    <a class="dropdown-item" href="#">Giá từ cao đến thấp</a>
						  </div>
						</div>
					</div>
				</div> 
				<div class="row" style=" padding-top: 40px;">
					{{#each products}}
						{{> product-index}}
					{{/each}}
				</div>

				<div class="row" style="margin-left: 10px;">
					<button class="btn btn-outline-primary col-sm-1 offset-sm-5 ht-see-more">Xem thêm</button>
				</div>
			</section>
		</div>
	</div>
</div>