<div class="agile-grids">	
	<!-- tables -->				
	<div class="agile-tables">
		<div class="w3l-table-info">
		  <div class="row">
		  <h2 class="col-sm-8">Quản lý tài khoản</h2>
		  <!-- <div class="col-sm-1"> <button class="btn btn-primary" style="margin-right: 30px;"><i class="fa fa-undo"></i></button></div> -->
		  <div style="color: #ff4a43;font-size: 30px;" class="sm-col-3">{{numUsers}} người dùng</div>
		  </div>
		    <table id="table">
			<thead>
			  <tr>
				<th>Họ tên</th>
				<th>Email</th>
				<th>SĐT</th>
				<th>Trạng thái</th>
			  </tr>
			</thead>
			<tbody>
			{{#each users}}
			  <tr>
				<td>{{name}}</td>
				<td>{{email}}</td>
				<td>{{phone}}</td>
				{{#if status}}
				<td><button value="{{_id}}" class="badge badge-success user-status active">Active</button></td>
				{{else}}
				<td><button value="{{_id}}" class="badge badge-secondary user-status">Inactive</button></td>
				{{/if}}
			  </tr>
			 {{/each}}
			</tbody>
		  </table>
		</div>
	</div>
	<form id="banUser" action="/ban" method="post">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
