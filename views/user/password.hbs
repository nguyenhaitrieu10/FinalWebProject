<section class="container" style="padding-top: 62px; width: 50%;">
  {{#if hasErrors}}
  <div class="alert alert-danger" class="alert-danger" style="margin: 20px 0 0 0;">
    {{#each messages}}
        <p>{{this}}</p>
    {{/each}}
  </div>
  {{/if}}
  <div class="modal-header" style="padding-bottom: 0; padding-left: 0;">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <h3 class="nav-link active" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" >Đổi mật khẩu</h3>
      </li>
    </ul>
  </div>
  <form id="infoForm" action="/user/password" method="post">
    <div class="form-group">
      <label for="oldPassword">Mật khẩu cũ</label>
      <input type="password" name="old" id="oldPassword" class="form-control"  placeholder="Mật khẩu cũ" required>
    </div>
    <div class="form-group">
      <label for="newPassword">Mật khẩu mới</label>
      <input type="password" name="new" class="form-control" id="newPassword" placeholder="Mật khẩu mới" required>
    </div>
      <div class="form-group">
        <label for="renewPassword">Nhập lại mật khẩu mới</label>
        <input type="password" name="renew" class="form-control" id="renewPassword" placeholder="Nhập lại mật khẩu mới" required>
      </div>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
  </form>
    <button type="submit" class="btn btn-primary save-info" style="width: 100%;">Đổi mật khẩu</button>
    
</section>
<script type="text/javascript">
    $(document).ready(function(){
       $('.save-info').click(function(){
            if ($('#newPassword').val() !== $('#renewPassword').val()){
              alert('Mật khẩu mới và mật khẩu xác nhận lại không giống nhau!');
            } else if ($('#newPassword').val().length < 6 || $('#oldPassword').val().length < 6){
              alert('Mật khẩu phải có ít nhất 6 ký tự');
            } else {
              $('#infoForm').submit();
            }
       }); 
    });
</script>