<section class="container" style="padding-top: 62px; width: 50%;">
  {{#if hasErrors}}
  <div class="alert alert-danger" class="alert-danger" style="margin: 20px 0 0 0;">
    {{#each messages}}
        <p>{{this}}</p>
    {{/each}}
  </div>
  {{/if}}
  <div class="modal-header" style="padding-bottom: 0; padding-left: 0;">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" style="font-size: 1.3em">Đăng ký</a>
      </li>
    </ul>
  </div>
  <form action="/user/signup" method="post">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail">Email</label>
        <input type="email" name="email" class="form-control" id="inputEmail" placeholder="Email" required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword">Mật khẩu</label>
        <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Mật khẩu có ít nhất 6 ký tự" required>
      </div>
    </div>
    <div class="form-group">
      <label for="inputAddress">Họ tên</label>
      <input type="text" name="name" class="form-control" id="inputAddress" placeholder="Nhập họ tên" required>
    </div>
    <div class="form-group">
      <label for="inputAddress">Địa chỉ</label>
      <input type="text" name="address" class="form-control" id="inputAddrèss" placeholder="Nhập địa chỉ" required>
    </div>
    <div class="form-row">
      <div class="form-group col-md-8">
        <label for="inputPhone">Số điện thoại</label>
        <input type="number" name="phone" class="form-control" id="inputPhone" placeholder="Nhập số điện thoại" required>
      </div>
      <div class="form-group col-md-4">
        <label for="inputBirth">Năm sinh</label>
        <select id="inputBirth" name="birth" class="form-control" required>
        </select>
      </div>
    </div>
    <div style="text-align: right;">
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <button type="submit" class="btn btn-primary" style="width: 100%;">Đăng ký</button>
    </div>
  </form>
</section>
<script type="text/javascript" src="/js/set-date.js"></script>
