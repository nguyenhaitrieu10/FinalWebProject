<section class="container" style="padding-top: 62px; width: 50%;">
  {{#if hasErrors}}
  <div class="alert alert-danger" class="alert-danger" style="margin: 20px 0 0 0;">
    {{#each messages}}
        <p>{{this}}</p>
    {{/each}}
  </div>
  {{/if}}
  <div class="modal-header" style="padding-bottom: 0; padding-left: 0;">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <h3 class="nav-link active" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" >Thông tin tài khoản</h3>
      </li>
    </ul>
  </div>
  <form id="infoForm" action="/user/profile" method="post">
    <div class="form-group">
      <label for="inputAddress">Họ tên</label>
      <input type="text" name="name" id="name"class="form-control" id="inputAddress" value="{{user.name}}" required>
    </div>
    <div class="form-group">
      <label for="inputAddress">Địa chỉ</label>
      <input type="text" name="address" class="form-control" id="inputAddrèss" value="{{user.address}}" required>
    </div>
    <div class="form-row">
      <div class="form-group col-md-8">
        <label for="inputPhone">Số điện thoại</label>
        <input type="number" name="phone" class="form-control" id="inputPhone" value="{{user.phone}}" required>
      </div>
      <div class="form-group col-md-4">
        <label for="inputBirth">Năm sinh</label>
        <select id="inputBirth" name="birth" class="form-control" required>
        </select>
      </div>
    </div>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
  </form>

    <div style="text-align: right;">
      <button type="submit" class="btn btn-primary save-info" style="width: 50%;">Lưu thay đổi</button>
      <a href="/user/password" class="btn btn-danger" style="width: 49%; background-color: #ff6600; border-color: #ff6600">
          Đổi mật khẩu
      </a>
      </button>
    </div>
</section>
<script type="text/javascript" src="/js/set-date.js"></script>
<script type="text/javascript">
    $(document).ready(function(){
       $('.save-info').click(function(e){
            let r = confirm('Bạn muốn lưu thông tin đã thay đổi?');
            if (r){
                $('#infoForm').submit();
            }
       }); 
    });
</script>